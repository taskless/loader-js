{
  "name": "@taskless/shim",
  "description": "Taskless - shim library",
  "version": "0.0.5",
  "author": "Taskless",
  "license": "Apache-2.0",
  "scripts": {
    "ava": "ava",
    "build": "tsup",
    "clean": "shx rm -rf dist",
    "husky": "husky",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "prettier": "prettier",
    "rel": "release-it",
    "syncpack": "syncpack",
    "test": "tsimp --restart && c8 ava",
    "tsimp": "tsimp",
    "xo": "xo"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/node.ts"
    ],
    "format": "esm",
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "dependencies": {
    "@theinternetfolks/snowflake": "^1.3.0",
    "convert-hrtime": "^5.0.0",
    "msw": "^2.3.0",
    "p-queue": "^8.0.1",
    "p-throttle": "^6.1.0",
    "serialize-error": "^11.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.12",
    "ava": "^6.1.3",
    "c8": "^9.1.0",
    "get-port": "^7.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "release-it": "*",
    "shx": "^0.3.4",
    "syncpack": "^12.3.2",
    "tsimp": "^2.0.11",
    "tsup": "^8.0.2",
    "type-fest": "^4.18.3",
    "typescript": "^5.4.5",
    "xo": "^0.58.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": []
}
